#!/bin/bash
###############################################################################
#
# Build a Docker container to run the test suite for the variable subsetting
# service.
#
# 2020-05-07: Adapted from SwotRepr.
# 2022-01-03: Updated Dockerfile path.
#
###############################################################################

image="sds/variable-subsetter-test"
tag=${1:-latest}


# Look for old version of image and remove
old=$(docker images | grep "$image" | grep "$tag" | awk '{print $3}')
if [ ! -z "$old" ] && [ "$2" != "--no-delete" ]; then
    docker rmi "$old"
fi

# Build the image
docker build -t ${image}:${tag} -f docker/tests.Dockerfile .

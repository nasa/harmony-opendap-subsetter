#!/bin/bash
###############################################################################
#
# Execute the sds/variable-subsetter-test Docker image as a container,  within
# Bamboo.
#
# Adapted from SwotRepr: 2020-05-07
#
###############################################################################

set -ex

find . | grep -E "(__pycache__|\.pyc|\.pyo$)" | xargs rm -rf

docker run --rm -v $(pwd):/home sds/variable-subsetter-test "$@"
